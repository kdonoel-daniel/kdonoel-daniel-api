{
  "hooks": {
    "after:git:bump": "npm run package"
  },
	"verbose": 2,
  "git": {
    "commit": true,
    "commitMessage": "release: V ${version}",
    "tag": true,
    "tagName": "${version}",
    "tagAnnotation": "release: V ${version}",
    "push": true
  },
  "kooks": {
    "before:init": ["npm run lint"],
    "after:release": "npm run post:release"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "V ${version}",
    "preRelease": false,
    "draft": false,
    "tokenRef": "GITHUB_TOKEN",
    "assets": ["build/*.tar"]
  },
  "dist": {
    "repo": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "eslint",
      "infile": "CHANGELOG.md"
    }
  },
  "prompt": {
    "src": {
      "status": true,
      "commit": true,
      "tag": true,
      "push": true,
      "release": true,
      "publish": true
    },
    "dist": {
      "status": true,
      "commit": true,
      "tag": true,
      "push": true,
      "release": true,
      "publish": true
    }
  }
}
